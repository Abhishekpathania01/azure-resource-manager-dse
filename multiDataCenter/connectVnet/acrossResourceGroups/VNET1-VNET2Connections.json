{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"location1": {
			"type": "string",
			"metadata": {
				"description": "The region to deploy the resources into"
			}
		},
		"location2": {
			"type": "string",
			"metadata": {
				"description": "The region to deploy the resources into"
			}
		},
		"gatewayName1": {
			"type": "string",
			"metadata": {
				"description": "The name of the Virtual Network Gateway"
			}
		},
		"gatewayName2": {
			"type": "string",
			"metadata": {
				"description": "The name of the Virtual Network Gateway"
			}
		},
		"gatewaySharedKey" :{
			"type": "string",
			"metadata": {
				"description": "The IP Address of the local Gateway"
			},
			"defaultValue" : "abc123"
		}
	},
	"variables": {
		"vnetGatewayID1": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('gatewayName1'))]",
		"vnetGatewayID2": "[resourceId('Microsoft.Network/virtualNetworkGateways', parameters('gatewayName2'))]",
		"connectionName1" :"[concat(parameters('gatewayName1'),'-connection')]",
		"connectionName2" :"[concat(parameters('gatewayName2'),'-connection')]"
	},	
	"resources": [
		{
			"apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/connections",
            "name": "[variables('connectionName1')]",
            "location": "[parameters('location1')]",	
			"properties": {
				"virtualNetworkGateway1": {
					"id": "[variables('vnetGatewayID1')]"
				},
				"virtualNetworkGateway2": {
					"id": "[variables('vnetGatewayID2')]"
				},
				"connectionType": "Vnet2Vnet",
                "routingWeight": 3,
				"sharedKey": "[parameters('gatewaySharedKey')]"
			}
		},
		{
			"apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/connections",
            "name": "[variables('connectionName2')]",
            "location": "[parameters('location2')]",			
			"properties": {
				"virtualNetworkGateway1": {
					"id": "[variables('vnetGatewayID2')]"
				},
				"virtualNetworkGateway2": {
					"id": "[variables('vnetGatewayID1')]"
				},
				"connectionType": "Vnet2Vnet",
                "routingWeight": 3,
				"sharedKey": "[parameters('gatewaySharedKey')]"
			}
		}
	]
}