{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nodeCount": {
      "type": "int",
      "defaultValue": 4,
      "metadata": {
        "description": "The number of nodes to provision."
      }
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_D12",
      "allowedValues": [
        "Standard_D12",
        "Standard_D13",
        "Standard_D14",
        "Standard_G2",
        "Standard_G3",
        "Standard_G4",
        "Standard_G5"
      ],
      "metadata": {
        "description": "The size of virtual machine to provision for each cluster node"
      }
    },
    "username": {
      "type": "string",
      "defaultValue": "datastax",
      "metadata": {
        "description": "SSH username for the virtual machines"
      }
    },
    "password": {
      "type": "securestring",
      "defaultValue" : "foo123!",
      "metadata": {
        "description": "SSH password for the virtual machines"
      }
    }
  },
  "variables": {
    "region": "[resourcegroup().location]",
    "templateBaseUrl": "https://raw.githubusercontent.com/DSPN/azure-arm-dse/master/refactor/",
    "sharedTemplateUrl": "[concat(variables('templateBaseUrl'), 'sharedResources.json')]",
  },
  "resources": [
    {
      "name": "shared",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sharedTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "region": {
            "value": "[variables('region')]"
          },
          "networkSettings": {
            "value": "[variables('networkSettings')]"
          },
          "storageAccountName": {
            "value": "[variables('sharedStorageAccountName')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}

