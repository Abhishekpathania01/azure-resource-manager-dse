{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Username": {
      "type": "string",
      "metadata": {
        "description": "User name for the virtual machines. Cannot be 'admin'"
      }
    },
    "UserPassword": {
      "type": "securestring",
      "metadata": {
        "description": "User password for the virtual machines"
      }
    }
  },
  "variables": {
    "baseUrl": "https://raw.githubusercontent.com/DSPN/azure-resource-manager-dse/workshop",
    "templateUrl": "[concat(variables('baseUrl'), '/singledc/')]",
    "extensionUrl": "[concat(variables('baseUrl'), '/extensions/')]",
    "nodesTemplateUrl": "[concat(variables('templateUrl'), 'nodes.json')]",
    "opsCenterPubIPTemplateUrl": "[concat(variables('templateUrl'), 'opsCenterPublicIP.json')]",
    "opsCenterTemplateUrl": "[concat(variables('templateUrl'), 'opsCenter.json')]",
    "location": "[resourcegroup().location]",
    "uniqueString": "[uniqueString(resourceGroup().id, deployment().name)]",
    "vnetName": "vnet",
    "subnetName": "subnet",
    "nodeCount": 3,
    "vmSize": "Standard_D4s_v3",
    "DBPassword": "unused",
    "OpsCPassword": "unused",
    "osSettings": {
      "imageReference": {
        "publisher": "datastax",
        "offer": "datastax-enterprise",
        "sku": "datastaxenterprise",
        "version": "latest"
      },
      "scripts": [
        "[concat(variables('extensionUrl'), 'node.sh')]",
        "[concat(variables('extensionUrl'), 'opsCenter.sh')]"
      ]
    }
  },
  "resources": [
    {
      "apiVersion": "2017-08-01",
      "name": "pid-7c97edf3-231b-4d54-a35b-e6d7e253f353",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": []
        }
      }
    },
    {
      "apiVersion": "2017-11-01",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('vnetName')]",
      "location": "[variables('location')]",
      "dependsOn": [],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "[variables('subnetName')]",
            "properties": {
              "addressPrefix": "10.0.0.0/24"
            }
          }
        ]
      }
    },
    {
      "name": "opsCenterPublicIP",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('opsCenterPubIPTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[variables('location')]"
          },
          "uniqueString": {
            "value": "[variables('uniqueString')]"
          }
        }
      }
    },
    {
      "name": "opsCenter",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'))]",
        "Microsoft.Resources/deployments/opsCenterPublicIP"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('opsCenterTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[variables('location')]"
          },
          "publicIPResourceId": {
            "value": "[reference('opsCenterPublicIP').outputs.opsCenterPublicIPResourceId.value]"
          },
          "uniqueString": {
            "value": "[variables('uniqueString')]"
          },
          "adminUsername": {
            "value": "[parameters('Username')]"
          },
          "adminPassword": {
            "value": "[parameters('UserPassword')]"
          },
          "OpsCPassword": {
            "value": "[variables('OpsCPassword')]"
          },
          "DBPassword": {
            "value": "[variables('DBPassword')]"
          },
          "nodeCount": {
            "value": "[variables('nodeCount')]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          }
        }
      }
    },
    {
      "name": "nodes",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-08-01",
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('vnetName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nodesTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[variables('location')]"
          },
          "opsCenterFQDN": {
            "value": "[reference('opsCenterPublicIP').outputs.opsCenterFQDN.value]"
          },
          "uniqueString": {
            "value": "[variables('uniqueString')]"
          },
          "OpsCPassword": {
            "value": "[variables('OpsCPassword')]"
          },
          "adminUsername": {
            "value": "[parameters('Username')]"
          },
          "adminPassword": {
            "value": "[parameters('UserPassword')]"
          },
          "nodeCount": {
            "value": "[variables('nodeCount')]"
          },
          "vmSize": {
            "value": "[variables('vmSize')]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "vnetName": {
            "value": "[variables('vnetName')]"
          },
          "subnetName": {
            "value": "[variables('subnetName')]"
          },
          "namespace": {
            "value": "dc0"
          }
        }
      }
    }
  ],
  "outputs": {
    "opsCenterURL": {
      "type": "string",
      "value": "[concat('http://', reference('opsCenterPublicIP').outputs.opsCenterIP.value, ':8888')]"
    },
    "lifecycleManagerURL": {
      "type": "string",
      "value": "[concat('http://', reference('opsCenterPublicIP').outputs.opsCenterIP.value, ':8888/opscenter/lcm.html')]"
    },
    "studioURL": {
      "type": "string",
      "value": "[concat('http://', reference('nodes').outputs.vm0ip.value, ':9091')]"
    },
    "docsURL": {
      "type": "string",
      "value": "[concat('http://', reference('nodes').outputs.vm0ip.value, ':1313')]"
    }
  }
}
