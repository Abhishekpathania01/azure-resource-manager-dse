{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterNodeCount": {
      "type": "int",
      "defaultValue": 4,
      "minValue": 1,
      "maxValue": 39,
      "metadata": {
        "description": "The number of virtual machines to provision for the cluster"
      }
    },
    "clusterVmSize": {
      "type": "string",
      "defaultValue": "Standard_D12",
      "allowedValues": [
        "Standard_D12",
        "Standard_D13",
        "Standard_D14",
        "Standard_G2",
        "Standard_G3",
        "Standard_G4",
        "Standard_G5"
      ],
      "metadata": {
        "description": "The size of virtual machine to provision for each cluster node"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin user name for the virtual machines"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password for the virtual machines"
      }
    }
  },
  "variables": {
    "clusterName": "[concat(resourcegroup().name, 'cluster')]",
    "region": "[resourcegroup().location]",
    "templateBaseUrl": "https://raw.githubusercontent.com/DSPN/azure-arm-dse/master/simple/",
    "nodesTemplateUrl": "[concat(variables('templateBaseUrl'), 'nodes.json')]",
    "nodeTemplateUrl": "[concat(variables('templateBaseUrl'), 'node.json')]",
    "opsCenterTemplateUrl": "[concat(variables('templateBaseUrl'), 'opscenter.json')]",
    "opsCenterInstallTemplateUrl": "[concat(variables('templateBaseUrl'), 'opscenterInstall.json')]",
    "nodeList": "[concat(variables('networkSettings').subnet.dse0.statics.clusterRange.base, variables('networkSettings').subnet.dse0.statics.clusterRange.start, '-', parameters('clusterNodeCount'))]",
    "storageAccountName": "[concat(variables('clusterName'),'cmn')]",
    "networkSettings": {
      "virtualNetworkName": "[variables('clusterName')]",
      "addressPrefix": "10.0.0.0/16",
      "subnet": {
        "dse0": {
          "name": "dse0",
          "prefix": "10.0.0.0/24",
          "vnet": "[variables('clusterName')]",
          "statics": {
            "clusterRange": {
              "base": "10.0.0.",
              "start": 6
            }
          }
        }
      },
      "opsCenterStatics": {
        "opsCenter": "10.0.0.5"
      }
    },
    "osSettings": {
      "imageReference": {
        "publisher": "Canonical",
        "offer": "UbuntuServer",
        "sku": "14.04.3-LTS",
        "version": "latest"
      },
      "scripts": [
        "[concat(variables('templateBaseUrl'), 'extensions/dseNode.sh')]",
        "[concat(variables('templateBaseUrl'), 'extensions/opscenter.sh')]",
        "[concat(variables('templateBaseUrl'), 'extensions/vm-disk-utils-0.1.sh')]"
      ]
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[variables('region')]",
      "properties": {
        "accountType": "Standard_LRS"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('networkSettings').virtualNetworkName]",
      "location": "[variables('region')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('networkSettings').addressPrefix]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('networkSettings').subnet.dse0.name]",
            "properties": {
              "addressPrefix": "[variables('networkSettings').subnet.dse0.prefix]"
            }
          }
        ]
      }
    },
    {
      "name": "nodes",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')]",
        "[resourceId('Microsoft.Network/virtualNetworks', variables('networkSettings').virtualNetworkName)]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nodesTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "region": {
            "value": "[variables('region')]"
          },
          "storageAccountName": {
            "value": "[variables('sharedStorageAccountName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "namespace": {
            "value": "dc1"
          },
          "vmSize": {
            "value": "[parameters('clusterVmSize')]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnet.dse0]"
          },
          "nodeCount": {
            "value": "[variables('clusterSpec').vmCount]"
          },
          "templateUrl": {
            "value": "[variables('clusterNodesTemplateUrl')]"
          },
          "nodeList": {
            "value": "[variables('clusterSpec').nodeList]"
          }
        }
      }
    },
    {
      "name": "opscenter",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')]",
        "[resourceId('Microsoft.Network/virtualNetworks', variables('networkSettings').virtualNetworkName)]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('opsCenterTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "region": {
            "value": "[variables('region')]"
          },
          "storageAccountName": {
            "value": "[variables('storageAccountName')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "namespace": {
            "value": "opc"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnet.dse0]"
          },
          "staticIp": {
            "value": "[variables('networkSettings').opsCenterStatics.opsCenter]"
          },
          "dnsName": {
            "value": "[variables('clusterName')]"
          }
        }
      }
    },
    {
      "name": "opscenter-install",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'nodes')]",
        "[concat('Microsoft.Resources/deployments/', 'opscenter-nodes')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('opsCenterInstallTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "region": {
            "value": "[variables('region')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "opsCenterSettings": {
            "value": {
              "nodeList": "[variables('clusterSpec').nodeList]",
              "subnetCount": "[variables('clusterSpec').storageAccountCount]"
            }
          }
        }
      }
    }
  ],
  "outputs": {}
}
