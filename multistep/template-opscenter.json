{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "DBPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for default C* user 'cassandra'"
      }
    },
    "clusterName": {
      "type": "string"
    },
    "vnetName": {
      "type": "string"
    },
    "subnetName": {
      "type": "string"
    }
  },
  "variables": {
    "baseUrl": "https://raw.githubusercontent.com/DSPN/azure-resource-manager-dse/dev",
    "templateUrl": "[concat(variables('baseUrl'), '/multistep/')]",
    "extensionUrl": "[concat(variables('baseUrl'), '/multistep/')]",
    "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
    "subnetId": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "uniqueString": "[uniqueString(resourceGroup().id, deployment().name)]",
    "osSettings": {
      "imageReference": {
        "publisher": "Canonical",
        "offer": "UbuntuServer",
        "sku": "16.04.0-LTS",
        "version": "latest"
      },
      "scripts": [
        "[concat(variables('extensionUrl'), 'node.sh')]",
        "[concat(variables('extensionUrl'), 'opsCenter.sh')]"
      ]
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "opscenter",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat('opscenter', variables('uniqueString'))]"
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "opscenter",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.Network/publicIPAddresses/opscenter"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'opscenter')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('subnetId')]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2016-04-30-preview",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "opscenter",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.Network/networkInterfaces/opscenter"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_D1_v2"
        },
        "osProfile": {
          "computerName": "opscenter",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": "[variables('osSettings').imageReference]",
          "osDisk": {
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', 'opscenter')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "opscenter/installopscenter",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.Compute/virtualMachines/opscenter"
      ],
      "properties": {
        "publisher": "Microsoft.OSTCExtensions",
        "type": "CustomScriptForLinux",
        "typeHandlerVersion": "1.4",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": "[variables('osSettings').scripts]",
          "commandToExecute": "[concat('bash opsCenter.sh ', parameters('adminUsername'), ' ', parameters('adminPassword'), ' ', parameters('clusterName'))]"
        }
      }
    }
  ],
  "outputs": {
    "lifecycleManagerURL": {
      "type": "string",
      "value": "[concat('http://opscenter', variables('uniqueString'), '.', parameters('location'), '.cloudapp.azure.com:8888/opscenter/lcm.html')]"
    }
  }
}
