{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nodeCount": {
      "type": "int",
      "defaultValue": 4,
      "metadata": {
        "description": "The number of nodes to provision in each datacenter."
      }
    },
    "datacenterCount": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "The number of datacenters to provision."
      }
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_D12",
      }
    },
    "username": {
      "type": "string",
      "defaultValue": "datastax",
      "metadata": {
        "description": "SSH username for the virtual machines"
      }
    },
    "password": {
      "type": "securestring",
      "defaultValue" : "foo123!",
      "metadata": {
        "description": "SSH password for the virtual machines"
      }
    }
  },
  "variables": {
    "region": "[resourcegroup().location]",
    "templateBaseUrl": "https://raw.githubusercontent.com/DSPN/azure-arm-dse/master/main/"
  },
  "resources": [
  ]
}

